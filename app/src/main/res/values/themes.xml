<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kotlin_ZHCS" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>   <!--这个是最上面的工具栏的背景颜色-->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="footButton" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/theme</item>   <!--选中颜色-->
        <item name="android:textColorSecondary">@color/gray</item> <!--未选中颜色-->
    </style>

    <style name="tab_layout_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>




















